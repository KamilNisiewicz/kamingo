<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Kamingo - Learn English{% endblock %}</title>

    {# Tailwind CSS CDN #}
    <script src="https://cdn.tailwindcss.com"></script>

    {# Custom Tailwind Config #}
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'programming': {
                            50: '#eff6ff',
                            100: '#dbeafe',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                        },
                        'travel': {
                            50: '#f0fdf4',
                            100: '#dcfce7',
                            500: '#22c55e',
                            600: '#16a34a',
                            700: '#15803d',
                        }
                    }
                }
            }
        }
    </script>

    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body class="bg-gray-50 min-h-screen">
    {# Navbar #}
    <nav class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                {# Logo #}
                <div class="flex items-center">
                    <a href="{{ path('app_home') }}" class="text-2xl font-bold text-gray-900">
                        Kamingo
                    </a>
                </div>

                {# Navigation Links #}
                <div class="flex items-center space-x-4">
                    {% if app.user %}
                        {# Logged in #}
                        <a href="{{ path('app_dashboard') }}" class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
                            Panel
                        </a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('admin') }}" class="text-blue-600 hover:text-blue-800 px-3 py-2 rounded-md text-sm font-medium">
                                Admin
                            </a>
                        {% endif %}
                        <span class="text-gray-500 text-sm">
                            {{ app.user.username }}
                        </span>
                        <a href="{{ path('app_logout') }}" class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-md text-sm font-medium">
                            Wyloguj
                        </a>
                    {% else %}
                        {# Not logged in #}
                        <a href="{{ path('app_home') }}" class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
                            Strona główna
                        </a>
                        <a href="{{ path('app_login') }}" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium">
                            Zaloguj
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </nav>

    {# Flash Messages #}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="rounded-md p-4 mb-4 {% if type == 'success' %}bg-green-50 border border-green-200{% elseif type == 'error' %}bg-red-50 border border-red-200{% else %}bg-blue-50 border border-blue-200{% endif %}">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            {% if type == 'success' %}
                                <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                            {% elseif type == 'error' %}
                                <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                </svg>
                            {% else %}
                                <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                                </svg>
                            {% endif %}
                        </div>
                        <div class="ml-3">
                            <p class="text-sm {% if type == 'success' %}text-green-800{% elseif type == 'error' %}text-red-800{% else %}text-blue-800{% endif %}">
                                {{ message }}
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    {# Main Content #}
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {% block body %}{% endblock %}
    </main>

    {# Footer #}
    <footer class="bg-white border-t border-gray-200 mt-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <p class="text-center text-gray-500 text-sm">
                Kamingo &copy; 2025 - Nauka angielskiego z AI
            </p>
        </div>
    </footer>
</body>
</html>
