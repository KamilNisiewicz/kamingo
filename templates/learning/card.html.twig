{% extends 'base.html.twig' %}

{% block title %}Nauka - {{ category }}{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    {# Progress bar #}
    <div class="mb-6">
        <div class="flex justify-between items-center mb-2">
            <span class="text-sm font-medium text-gray-700">Postęp sesji</span>
            <span class="text-sm font-medium text-gray-700">{{ current_index }}/{{ total_cards }}</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2.5">
            <div class="{% if category == 'programming' %}bg-programming-500{% else %}bg-travel-500{% endif %} h-2.5 rounded-full"
                 style="width: {{ (current_index / total_cards * 100)|round }}%"></div>
        </div>
    </div>

    {# Flashcard #}
    <div class="bg-white rounded-lg shadow-lg p-8 mb-6 min-h-[400px] flex flex-col justify-center">
        {# Front side - Question #}
        <div class="text-center">
            <div class="mb-4">
                <span class="inline-block px-3 py-1 text-sm font-semibold rounded-full
                    {% if category == 'programming' %}bg-programming-100 text-programming-700{% else %}bg-travel-100 text-travel-700{% endif %}">
                    {{ category == 'programming' ? 'Programming' : 'Travel' }}
                </span>
            </div>

            <h1 class="text-4xl font-bold text-gray-900 mb-8">
                {{ word.word }}
            </h1>

            {% if not show_answer %}
                {# Show Answer Button #}
                <form method="POST" action="{{ path('app_learn_show_answer') }}">
                    <button type="submit"
                            class="px-8 py-3 {% if category == 'programming' %}bg-programming-600 hover:bg-programming-700{% else %}bg-travel-600 hover:bg-travel-700{% endif %} text-white rounded-lg font-medium transition">
                        Pokaż odpowiedź
                    </button>
                </form>
            {% else %}
                {# Back side - Answer #}
                <div class="mb-6">
                    <div class="text-2xl text-gray-700 mb-4">
                        {{ word.translation }}
                    </div>

                    {% if word.example %}
                        <div class="bg-gray-50 rounded-lg p-4 mb-6">
                            <p class="text-sm text-gray-600 mb-1">Przykład:</p>
                            <p class="text-gray-800 italic">"{{ word.example }}"</p>
                        </div>
                    {% endif %}
                </div>

                {# Review Buttons #}
                <div class="flex gap-3 justify-center">
                    <form method="POST" action="{{ path('app_learn_review', {quality: 'again'}) }}" class="inline">
                        <button type="submit"
                                class="px-6 py-3 bg-red-600 hover:bg-red-700 text-white rounded-lg font-medium transition">
                            Nie pamiętam
                        </button>
                    </form>

                    <form method="POST" action="{{ path('app_learn_review', {quality: 'good'}) }}" class="inline">
                        <button type="submit"
                                class="px-6 py-3 bg-yellow-600 hover:bg-yellow-700 text-white rounded-lg font-medium transition">
                            Pamiętam
                        </button>
                    </form>

                    <form method="POST" action="{{ path('app_learn_review', {quality: 'easy'}) }}" class="inline">
                        <button type="submit"
                                class="px-6 py-3 bg-green-600 hover:bg-green-700 text-white rounded-lg font-medium transition">
                            Łatwe
                        </button>
                    </form>
                </div>

                {# Info about next review #}
                <div class="mt-6 text-sm text-gray-500">
                    <p>Status: <span class="font-medium">{{ progress.status.value }}</span></p>
                    <p>Powtórzenia: <span class="font-medium">{{ progress.repetitions }}</span></p>
                </div>
            {% endif %}
        </div>
    </div>

    {# Exit session button #}
    <div class="text-center">
        <a href="{{ path('app_dashboard') }}" class="text-gray-600 hover:text-gray-900 text-sm">
            Zakończ sesję
        </a>
    </div>
</div>
{% endblock %}
